{
  "name": "iobroker.sbms",
  "version": "0.4.1",
  "description": "ioBroker Adapter for Electrodacus SBMS",
  "author": {
    "name": "buffoletti",
    "email": "info@buffoletti.de"
  },
  "homepage": "https://github.com/buffoletti/ioBroker.sbms",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "SBMS",
    "Electrodacus"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/buffoletti/ioBroker.sbms.git"
  },
  "engines": {
    "node": ">= 20"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.3.2",
    "axios": "^1.6.0",
    "serialport": "^12.0.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@iobroker/adapter-dev": "^1.4.0",
    "@iobroker/dev-server": "^0.7.8",
    "@iobroker/eslint-config": "^2.2.0",
    "@iobroker/testing": "^5.1.0",
    "@tsconfig/node20": "^20.1.6",
    "@types/node": "^24.6.1",
    "mocha": "^11.7.1",
    "proxyquire": "^2.1.3",
    "sinon": "^21.0.0",
    "sinon-chai": "^3.7.0",
    "typescript": "~5.0.4"
  },
  "main": "main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).{json,json5}",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "admin/i18n/**",
    "lib/",
    "www/",
    "io-package.json",
    "LICENSE",
    "main.js"
  ],
  "scripts": {
    "test:js": "mocha --config test/mocharc.custom.json \"{!(node_modules|test)/**/*.test.js,*.test.js,test/**/test!(PackageFiles|Startup).js}\"",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:js && npm run test:package",
    "check": "tsc --noEmit -p tsconfig.check.json",
    "lint": "eslint -c eslint.config.mjs .",
    "translate": "translate-adapter",
    "release": "release-script",
    "dev-server": "dev-server"
  },
  "bugs": {
    "url": "https://github.com/buffoletti/ioBroker.sbms/issues"
  },
  "readmeFilename": "README.md"
}
